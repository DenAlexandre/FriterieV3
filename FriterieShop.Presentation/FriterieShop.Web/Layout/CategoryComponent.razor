@if (_categories != null && _categories.Any())
{
    <div class="w-full px-2 sm:px-4">
        <div class="rounded-lg border border-neutral-200 bg-white/80 shadow p-4">
            <div class="flex flex-wrap gap-3">
                @for (var i = 0; i < _categories.Count(); i++)
                {
                    var category = _categories.ElementAt(i);
                    var color = GetColor(i);
                    var url = $"main/products/category/{category.Id}";

                    <a href="@url"
                       @onclick:preventDefault
                       @onclick="() => SelectCategory(category.Id)"
                       class="flex flex-col justify-between h-full rounded-xl border border-neutral-200 bg-white/90 px-4 py-3 hover:shadow-xl hover:-translate-y-0.5 transition-all duration-200
                                  w-[48%] sm:w-[32%] md:w-[24%] lg:w-[20%]">

                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-full grid place-items-center text-white @color.bg">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 7h18M3 12h18M3 17h18" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="font-semibold leading-snug break-words whitespace-normal">@category.Name</div>
                                <div class="text-xs text-neutral-500">Browse</div>
                            </div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-neutral-400 group-hover:text-neutral-600 transition-transform group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 18l6-6-6-6" />
                            </svg>
                        </div>

                        <div class="pointer-events-none absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 @color.ring transition-opacity"></div>
                    </a>
                }
            </div>
        </div>
    </div>

}
else
{
    <div class="text-sm text-neutral-600">No categories found.</div>
}