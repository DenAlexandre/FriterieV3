@inherits LayoutComponentBase

<div class="clip-diagonal bg-neutral-900/95 text-neutral-100 border-b border-white/10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-12 sm:h-14 flex items-center justify-between">
        <a href="/" class="hidden sm:inline-flex flex-col leading-none select-none">
            <span class="text-sm font-extrabold tracking-wider">Friterie le Barbare&reg;</span>
            <span class="text-[10px] text-orange-400 -mt-0.5">CUISINE</span>
        </a>

        <nav class="hidden md:flex items-center gap-2 text-[0.95rem] font-medium">
            <NavLink href="kitchen" Match="NavLinkMatch.All" class="px-3 py-1.5 rounded-md text-neutral-200 hover:text-white hover:bg-white/10 transition-colors" ActiveClass="bg-white/20 text-white">Commandes</NavLink>
            <a href="/authentication/logout" class="px-3 py-1.5 rounded-md text-orange-300 hover:text-white hover:bg-orange-400/10 transition-colors">D&eacute;connexion</a>
        </nav>

        <button class="md:hidden inline-flex items-center justify-center rounded px-2 py-1.5 hover:bg-white/10" @onclick="ToggleMenu" aria-label="Open kitchen menu">
            <span class="block h-0.5 w-6 bg-neutral-100"></span>
        </button>
    </div>
</div>

@if (IsMenuVisible)
{
    <div class="fixed inset-0 z-50" aria-modal="true" role="dialog">
        <div class="absolute inset-0 bg-black/50" @onclick="HideMenu"></div>
        <div class="absolute right-0 top-0 h-full w-64 bg-white shadow-xl p-4 flex flex-col">
            <div class="flex items-center justify-between">
                <div class="text-sm font-semibold tracking-wide">Cuisine Menu</div>
                <button class="p-1 rounded hover:bg-neutral-100" @onclick="HideMenu" aria-label="Close">&#10005;</button>
            </div>
            <nav class="mt-4 flex-1 space-y-2 text-sm">
                <NavLink href="kitchen" Match="NavLinkMatch.All" class="block rounded px-3 py-2 hover:bg-neutral-100" ActiveClass="bg-neutral-200" @onclick="HideMenu">Commandes</NavLink>
                <a href="/authentication/logout" class="block rounded px-3 py-2 text-red-600 hover:bg-red-50" @onclick="HideMenu">D&eacute;connexion</a>
            </nav>
        </div>
    </div>
}

@code {
    private bool IsMenuVisible = false;

    private void ToggleMenu()
    {
        IsMenuVisible = !IsMenuVisible;
    }

    private void HideMenu()
    {
        IsMenuVisible = false;
    }
}
